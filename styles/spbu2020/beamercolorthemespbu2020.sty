% Settings
\definecolor{spbu_red}{rgb}{0.62,0.06,0.05}
\definecolor{spbu_gray}{rgb}{0.62,0.69,0.71}
\definecolor{spbu_darkgray}{rgb}{0.4,0.4,0.4}
\definecolor{spbu_background_gray}{rgb}{0.93,0.93,0.93}
\definecolor{spbu_orange}{rgb}{1,0.6,0}

\setbeamercolor*{title page header}{fg=spbu_red}
\setbeamerfont*{title}{size*={18pt}{1}}
\setbeamercolor*{subtitle}{fg=spbu_red}
\setbeamerfont*{subtitle}{size*={12pt}{1}}
\setbeamercolor*{author}{fg=spbu_red}
\setbeamerfont*{author}{size*={14pt}{1}}
\setbeamercolor*{institute}{fg=spbu_red}
\setbeamerfont*{institute}{size*={10pt}{1}}
\setbeamercolor*{frametitle}{fg=white}
\setbeamerfont*{frametitle}{size*={12pt}{1}}
\definecolor{text}{rgb}{0,0,0}
\setbeamercolor{normal text}{fg=spbu_darkgray}
\setbeamercolor{structure}{fg=spbu_red}
\setbeamerfont{normal text}{size*={9pt}{18}}
\setbeamerfont{caption}{size*={7pt}{10}}
\AtBeginDocument{\usebeamerfont{normal text}}

\setbeamertemplate{caption}[numbered]
\setbeamercolor{itemize item}{fg=spbu_darkgray}
\setbeamercolor{itemize subitem}{fg=spbu_darkgray}
\setbeamercolor{alerted text}{fg=spbu_darkgray}
\setbeamercolor{enumerate item}{fg=spbu_darkgray}
\setbeamertemplate{itemize items}{\textbullet}
\setbeamerfont*{itemize/enumerate subbody}{parent=itemize/enumerate body}
\setbeamerfont*{itemize/enumerate subsubbody}{parent=itemize/enumerate subbody}
\setbeamerfont{alerted text}{series=\bfseries}
